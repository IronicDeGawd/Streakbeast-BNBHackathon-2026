{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./node_modules/@types"]
    },
    "include": [
        "src/**/*",
        "api/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
