# Badge Service Environment Variables
# Copy this file to .env and fill in the values

# Agent wallet private key (the deployer/agent address that can mint badges)
AGENT_PRIVATE_KEY=your_private_key_here

# opBNB Testnet RPC URL
RPC_URL=https://opbnb-testnet-rpc.bnbchain.org

# StreakBadge contract address on opBNB Testnet
BADGE_CONTRACT_ADDRESS=0x7ED2D07847eff93fB00F12FE2F48cB7c1cb9C634

# StreakBeastCore contract address on opBNB Testnet
CORE_CONTRACT_ADDRESS=0x1C95958de2aB2b876609F052F239cFA72CEF87DC

# Server port
PORT=3001

# CDN URL for badge images
